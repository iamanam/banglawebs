#container
  width 100%
  min-height: 200px
  height auto
  font-size 100%
  display flex
  padding: 15px 0px
  box-sizing: border-box
  font-family: 'Advent Pro'
  #feature
    display flex
    flex-direction column
    width 100%
    height 100%
    .feature-intro
      height 15%
      width 100%
      background #83ECD5
      h3
        padding 0
        margin 0
        display block
        text-align center
    .feature-main
      height 80%
      width 100%
      display flex
      box-sizing border-box
      .table
        flex 1 1 auto
        background black
        height 100%
        border 2px solid white
        flex-wrap wrap
        box-sizing border-box
  #feature
    display: flex
    flex-direction: column
    #feature-intro
      display: block
      width: 100%
      font-size: 1.6rem
      text-transform: uppercase
      text-align: center
      h3
        margin: 20px 25%
        border-bottom: 5px solid #457167

    #section-feature
      width: 100%
      display: inline-flex
      flex-wrap: wrap
      position: relative

      section.services
        width: 33.33%
        margin: 1% 0% 0 0
        border-right: 5px solid $color_main
        position: relative
        +below(2)
          width: 50%
        &:nth-child(1)
          .service-img
            background: #F44336
        &:nth-child(2)
          .service-img
            background: #009688
        &:nth-child(3)
          .service-img
            background: #8BC34A
        &:nth-child(4)
          .service-img
            background: #795548
        &:nth-child(5)
          .service-img
            background: #607D8B
        &:nth-child(6)
          .service-img
            background: #CDDC39
        //for removing the extra border of last item in column
        &:nth-of-type(3n)
          border-right: none
        .service-img
          width: 100%
          height: 256px
          position: relative
          display: block
          img
            width: 128px
            height: 128px
            display: block
            margin: auto
            padding-top: 64px
            box-sizing: content-box
            transition: all .5s
          &:hover
            img
              transform: scale(1.2);
        .service-info
          padding: 10px 5px 5px 0
          width: 100%
          line-height: 1.5
          position: relative
          background: white
          height: 125px
          +below(3)
            height: 145px
          +below(2)
            height: 165px
          h4
            text-align: center
            font-size: 1.1rem
            margin: 0
            padding: 0 10px
            position: relative
          span
            margin: 10px 0
            text-align: center
            position: absolute
            display: block
            bottom: 0
            width: 100%
            a
              text-decoration: none
              color: $color_main
              font-weight: bolder;
              font-size: 1.2rem
            &:hover
              text-decoration: underline
