@import 'jeet'
@import "rupture"
@import "./fonts.styl"
@import "./constant.styl"

html
  height: 100%;
  box-sizing: border-box;
  font-size 1.5vw
  +below(3)
    font-size: 2.2vw
  +below(2)
    font-size 2.5vw
  +below(1)
    font-size 3.5vw

*, *:before, *:after
  box-sizing: inherit

/* Main styles begin here */
Body
  background-color: $color_main
  font-size 100%
  font-family: "Advent pro"
  position: relative
  min-height: 100%


//some global styles
.other-options-stack
  display: flex
  div
    display: flex
    flex: 1
    margin-right: 5px
    background: #2196f3
    height: 100px
    padding: 8px
    align-items: center
    transition: .3s all .0s ease
    +below(2)
      padding: 0
    &:hover
      box-shadow: 1px 2px 3px 2px #2e618a
    a
      text-decoration: none
      color black
      font-size: 1.2rem
      font-weight: bold
      text-transform: uppercase;
      display: flex;
      flex-direction: column
      text-align: center
      margin: 0 auto
      i
        font-size: 2.5rem
        color: white
     span
       color: white
       margin: 5px

//the div#header which contain header-head,header-main,header-tail
footer
  padding: 10px
  border-top: 5px solid rgba(43, 134, 113, 0.4)
  text-align: center
  height: auto
  font-family: 'Advent Pro'
  p
    display inline-block
    margin: 0
    &:after
      display inline-block
      content ""
      width 5px
      background #257160
      height 15px
      margin 3px 5px 0 5px

  .total_link
    width: 100%
    display: block
    padding: 0
    position: relative
    font-size: 70%
    margin: 10px 0 20px 0
    div.cat
      min-width: 20%
      width: auto
      list-style: none
      display: inline-block
      padding: 0
      margin: 0
      border: 2px solid #25A084
      span
        display: block
        margin: 10px 0
        a
          text-decoration: none
          font-size: 120%
          text-align: center
          color: white
      ul
        list-style: none
        text-align: center
        padding: 0
        margin: 0
        width: 100%
        & > li
          display: block
          margin: 10px 0
          a
            text-decoration: none;
            color: black
